#include <iostream>

using namespace std;

void triangle() {
    double base, height, area;
    cout << "--------Pole trojkata--------" << endl;
    cout << "Podaj podstawe trojkata: ";
    cin >> base;
    cout << "Podaj wysokosc trojkata: ";
    cin >> height;
    area = (base * height) / 2;
    cout << "Pole trojkata wynosi: " << area;
}

int main() {
    triangle();

    return 0;
}
