#include <iostream>

using namespace std;

void trapeze() {
    double length_a, length_b, height, area;

    cout << "---------Pole trapezu---------" << endl;
    cout << "Podaj podstawe A: ";
    cin >> length_a;
    cout << "Podaj podstawe B: ";
    cin >> length_b;
    cout << "Podaj wysokosc: ";
    cin >> height;
    area = ((length_a + length_b) * height) / 2;
    cout << "Pole trapezu jest rowne: " << area;
}

int main() {
    trapeze();

    return 0;
}
